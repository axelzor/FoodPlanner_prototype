<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NearDateActivity">

    <include
        android:id="@+id/include18"
        layout="@layout/home_settings_button_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="108dp"
        app:layout_constraintBottom_toTopOf="@+id/listview_near_date"
        app:layout_constraintEnd_toEndOf="parent" />

    <ListView
        android:id="@+id/listview_near_date"
        android:layout_width="345dp"
        android:layout_height="282dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="33dp"
        android:background="@drawable/border"
        android:entries="@array/near_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include18">

    </ListView>

    <include
        layout="@layout/lower_button_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>